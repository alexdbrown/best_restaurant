<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
        <title>Edit this restaurant</title>
    </head>
    <body>
        <div class="container">
            <h1>Update the {{ restaurants.getRestaurantName }} category </h1>

            <form action="/restaurant/{{ restaurants.getId }}" method="post">

                <input name="_method" type="hidden" value="patch">
                <input id='cuisine_id' name='cuisine_id' type='hidden' value='{{ restaurants.getCuisineId() }}'>
                <div class="form-group">
                    <label for="restaurant_name">Update restaurant name:</label>
                    <input id="restaurant_name" name="restaurant_name" type="text">
                </div>
                <div class="form-group">
                    <label for="phone">Update restaurant phone number:</label>
                    <input id="phone" name="phone" type="text">
                </div>
                <div class="form-group">
                    <label for="address">Update restaurant address:</label>
                    <input id="address" name="address" type="text">
                </div>
                <div class="form-group">
                    <label for="website">Update restaurant website:</label>
                    <input id="website" name="website" type="text">
                </div>
              <button type="submit" class="btn btn-success">Update!</button>
            </form>

            <form action="/restaurant/{{ restaurants.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">
                <!-- needs id to tell the function what to delete.  -->
                <input id='cuisine_id' name='cuisine_id' type='hidden' value='{{ restaurants.getCuisineId() }}'>
                <button type="submit" class="btn btn-danger">Delete this restaurant</button>
            </form>
        </div>
    </body>
</html>
